<p id="notice"><%= notice %></p>

<h1>User Options</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Email</th>
      <th>Sms</th>
      <th>Notification</th>
      <th>Subscription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_options.each do |user_option| %>
      <tr>
        <td><%= user_option.user %></td>
        <td><%= user_option.email %></td>
        <td><%= user_option.sms %></td>
        <td><%= user_option.notification %></td>
        <td><%= user_option.subscription %></td>
        <td><%= link_to 'Show', user_option %></td>
        <td><%= link_to 'Edit', edit_user_option_path(user_option) %></td>
        <td><%= link_to 'Destroy', user_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

